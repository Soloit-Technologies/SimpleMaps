<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SimpleMaps.Maui"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Name="rootView"
             x:Class="SimpleMaps.Maui.MapControl"
             x:DataType="local:MapControl">
    <ContentView.Resources>
        <local:MapConverter x:Key="MapConverter"/>
    </ContentView.Resources>
    <mapsui:MapControl x:Name="mapControl" Map="{Binding Path=MapEngine, Source={RelativeSource AncestorType={x:Type local:MapControl}}, Converter={StaticResource MapConverter}, Mode=OneWay}"/>
</ContentView>